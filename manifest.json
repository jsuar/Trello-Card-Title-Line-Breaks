{
  "name": "Trello Card Title Line Breaks",
  "version": "1.0",
  "manifest_version": 3,
  "description": "This Chrome extension adds lines breaks to Trello cards.",
  "browser_action": {
    "default_icon": {
            "19": "img/icon-19.png",
            "38": "img/icon-38.png"
        }
  },
  "icons": {
      "16": "img/icon-16.png",
      "128": "img/icon-128.png"
  },
   "background": {
     "scripts": ["js/background.js"],
     "persistent": false
   },
  "permissions": [
  "contextMenus", "storage", "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "js": ["js/script.js"]
    }
  ],
  "optional_permissions": ["tabs"],
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  }
}